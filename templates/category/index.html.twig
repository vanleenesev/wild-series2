{% extends 'base.html.twig' %}

{% block title %}Catégories{% endblock %}

{% block body %}
    <h1>Catégories</h1>
    <ul>
        {% for category in categories %}
            <li>
                <a href="{{ path('category_show', {'categoryName': category.name}) }}">{{ category.name }}</a>
            </li>
        {% endfor %}
    </ul>
{% endblock %}
